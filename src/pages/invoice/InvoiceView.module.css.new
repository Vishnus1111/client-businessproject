.modalOverlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modalContent {
  background-color: white;
  border-radius: 8px;
  padding: 0;
  width: 800px;
  max-width: 95%;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.invoiceLayout {
  display: flex;
  position: relative;
}

.actionButtonsColumn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15px 10px;
  background-color: #f8f9fa;
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}

.closeButton, .downloadButton, .printButton {
  background: none;
  border: none;
  cursor: pointer;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  transition: all 0.2s ease;
}

.closeButton {
  background-color: #ff5c5c;
  color: white;
  font-size: 20px;
}

.downloadButton {
  background-color: #4f9cff;
  color: white;
  font-size: 16px;
}

.printButton {
  background-color: #ffc107;
  color: white;
  font-size: 16px;
}

.closeButton:hover, .downloadButton:hover, .printButton:hover {
  transform: scale(1.1);
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
}

.icon {
  font-size: 18px;
}

.invoiceContainer {
  padding: 30px;
  background-color: white;
  flex-grow: 1;
  overflow-y: auto;
}

.invoiceTitle {
  text-align: center;
  margin-bottom: 30px;
  font-size: 32px;
  font-weight: 700;
  letter-spacing: 2px;
  color: #333;
}

.addressSection {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30px;
}

.billedTo, .businessAddress {
  width: 48%;
}

.billedTo h4, .businessAddress h4 {
  font-size: 16px;
  font-weight: 600;
  color: #555;
  margin-bottom: 10px;
}

.billedTo p, .businessAddress p {
  font-size: 14px;
  margin: 4px 0;
  color: #555;
}

.invoiceInfo {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30px;
  padding: 15px 0;
  border-top: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
}

.invoiceInfoColumn, .referenceColumn {
  padding: 0 10px;
}

.invoiceInfoColumn {
  width: 60%;
}

.referenceColumn {
  width: 40%;
}

.detailRow {
  margin-bottom: 10px;
}

.detailRow h4 {
  font-size: 14px;
  color: #777;
  margin-bottom: 5px;
}

.detailRow p {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin: 0;
}

.productTable {
  margin-bottom: 30px;
}

.productTable table {
  width: 100%;
  border-collapse: collapse;
}

.productTable th {
  background-color: #f5f5f5;
  padding: 12px;
  text-align: left;
  font-weight: 600;
  color: #444;
  font-size: 14px;
}

.productTable td {
  padding: 12px;
  border-bottom: 1px solid #e0e0e0;
  color: #333;
  font-size: 14px;
}

.productTable th:first-child,
.productTable td:first-child {
  width: 60%;
}

.productTable th:nth-child(2),
.productTable td:nth-child(2) {
  width: 20%;
  text-align: center;
}

.productTable th:last-child,
.productTable td:last-child {
  width: 20%;
  text-align: right;
}

.summary {
  margin-top: 20px;
  width: 60%;
  margin-left: auto;
}

.summaryDetails {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  font-size: 14px;
}

.summaryDetails h4 {
  font-weight: 500;
  color: #666;
  margin: 0;
}

.summaryDetails p {
  font-weight: 500;
  color: #333;
  margin: 0;
}

.total {
  font-weight: bold;
  font-size: 16px;
  border-top: 1px solid #e0e0e0;
  padding-top: 10px;
  margin-top: 5px;
}

.total h4, .total p {
  font-weight: 700;
  color: #333;
  font-size: 18px;
}

.paymentNote {
  margin-top: 30px;
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #555;
}

.paymentNote input {
  margin-right: 10px;
}

.footer {
  display: flex;
  justify-content: center;
  margin-top: 40px;
  padding-top: 20px;
  border-top: 1px solid #e0e0e0;
  text-align: center;
}

.footerItem {
  margin: 0 15px;
  font-size: 14px;
  color: #555;
}

/* Responsive styles */
@media (max-width: 768px) {
  .invoiceLayout {
    flex-direction: column;
  }
  
  .actionButtonsColumn {
    flex-direction: row;
    padding: 10px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-left-radius: 0;
  }
  
  .closeButton, .downloadButton, .printButton {
    margin: 0 5px;
  }
  
  .addressSection {
    flex-direction: column;
  }
  
  .billedTo, .businessAddress {
    width: 100%;
    margin-bottom: 15px;
  }
  
  .invoiceInfo {
    flex-direction: column;
  }
  
  .invoiceInfoColumn, .referenceColumn {
    width: 100%;
    padding: 0;
    margin-bottom: 15px;
  }
  
  .summary {
    width: 100%;
  }
}
